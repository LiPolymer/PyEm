<ci:SettingsPageBase xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ci="http://classisland.tech/schemas/xaml/core"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:island="clr-namespace:PythonEntanglement.Island"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PythonEntanglement.Island.SettingsPage">
    <ScrollViewer DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=island:SettingsPage}}">
        <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
        <StackPanel Classes="settings-container animated-intro">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <ci:FluentIcon
                    FontSize="60"
                    Glyph="&#xE829;"
                    VerticalAlignment="Center"/>
                <Label VerticalAlignment="Center" FontSize="30">PyEm</Label>
            </StackPanel>
            <controls:SettingsExpander IconSource="{ci:LucideIconSource Glyph=&#xE4DA;}"
                                       Header="Python解释器位置"
                                       Description="选择Python解释器对应的库文件">
                <controls:SettingsExpander.Footer>
                    <StackPanel Orientation="Horizontal">
                        <Button Click="SelectFile" Padding="8,6,8,6" Margin="0,0,3,0" Content="{ci:LucideIcon &#xE338;}" FontSize="18" />
                        <TextBox MinWidth="50"
                                 MaxWidth="300"
                                 HorizontalContentAlignment="Center"
                                 Margin="3,0,6,0"
                                 InputMethod.IsInputMethodEnabled="False"
                                 Text="{Binding Settings.PythonLib, Mode=TwoWay}"/>
                    </StackPanel>
                </controls:SettingsExpander.Footer>
            </controls:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</ci:SettingsPageBase>
